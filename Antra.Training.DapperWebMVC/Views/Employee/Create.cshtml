@model Employee

<form asp-controller="Employee" asp-action="Create">
<div>
    <label>Name</label>
    <input type="text" asp-for="Name" class="form-control" />
</div>
<div>
    <label>Salary</label>
    <input type="text" asp-for="Salary" class="form-control" />
</div>
<div>
    <label>Department</label>
    <select asp-for="DepartmentId" asp-items="@ViewBag.Department" class="form-control" ></select>
</div>
<div>
    <label>EmailId</label>
    <input type="text" asp-for="EmailId" class="form-control" />
</div>
<button class="btn-primary btn">Save</button>
</form>
